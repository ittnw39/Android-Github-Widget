                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">
            <TextView android:id="@+id/grid_cell_0" android:layout_width="12dp" android:layout_height="12dp" android:layout_margin="1dp" android:background="#CCCCCC"/>
            <TextView android:id="@+id/grid_cell_1" android:layout_width="12dp" android:layout_height="12dp" android:layout_margin="1dp" android:background="#CCCCCC"/>
            <TextView android:id="@+id/grid_cell_2" android:layout_width="12dp" android:layout_height="12dp" android:layout_margin="1dp" android:background="#CCCCCC"/>
