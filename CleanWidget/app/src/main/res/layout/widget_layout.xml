<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="12dp"
              android:background="@color/github_background">

    <TextView
            android:id="@+id/widget_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GitHub 컨트리뷰션"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

    <LinearLayout
            android:id="@+id/contribution_grid_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

        <!-- 총 7열 -->
        <!-- 각 열은 7개의 뷰(행)로 구성 (총 49개 셀) -->
        <!-- column 0 ~ 6 -->
        <!-- 각 TextView에 layout_width/height/margin/background 직접 정의 -->

        <!-- 반복해서 column을 구성 -->
        <!-- 아래는 예시로 모든 grid_cell_0 ~ grid_cell_48 까지 포함 -->

        <!-- Column 0 -->
